function solution(phone_number) {
    var answer = '';
    const size = phone_number.length;
    
    
    console.log(size);
    
    for(var i = 0; i < size; i++){
        if((size-i) > 4){
          answer +='*';
        }else{
            answer += phone_number.charAt(i);
        }
    }
    return answer;
}
